@using LiveSheet
@if (_show)
{
    <div class="app-sidepanel-container @(_closeAnimation ? "close" : "")">
        <div class="sidepanel">
            <div class="content">
                <span class="close icon icon-x" @onclick="Close"></span>
                <span class="download icon icon-download" @onclick="DownloadApp"></span>

                <div class="app-image-container">
                    <div class="app-image @(App.State == LiveSheetState.Loaded ? "app-running" : "app-disabled")" style="background: url(@(App.AppIcon)) no-repeat center; background-size: contain;"></div>
                    <div class="app-image-options">
                        <div class="imageUpload icon-image-plus">
                            <InputFile class="inputFile" OnChange="LoadFiles" accept=".png,.jpg"/>
                        </div>
                        <div class="item-app-content-status-container">
                            <div class="item-app-content-status @(App.State == LiveSheetState.Loaded? "app-running" : "app-disabled")">
                                @(App.State == LiveSheetState.Loaded ? "Running" : "Paused")
                            </div>
                        </div>
                        <div class="imageRemove icon-image-off" @onclick=ClearAppImage></div>
                    </div>
                </div>


                <div class="content-body">
                    <div class="scroll-content">
                        <EditForm id="detailForm" Model="App.Data" class="editform" OnValidSubmit="OnValidSubmit">
                            <div class="content-item">
                                <label>Name</label>
                                <ValidationMessage For="@(() => App.Name)" autocomplete="off"/>
                                <InputText @bind-Value=App.Name></InputText>
                            </div>
                            <div class="content-item">
                                <label>Description</label>
                                <InputTextArea rows="12" @bind-Value=App.Description autocomplete="off"/>
                            </div>
                            @*                             
                                    <div class="content-item">
                                        <label>Avatar Tigger Ids</label>
                                        <ValueTextArea rows="12" @bind-Value=dOSCWiresheet. />
                                    </div> 
                                *@
                        </EditForm>

                    </div>
                </div>
                <div class="options">
                    <button type="button" class="dosc-button dosc-button-danger" data-dismiss="modal" @onclick=OnDeleteApp>Delete</button>
                    <button form="detailForm" type="submit" class="dosc-button dosc-button-primary" data-dismiss="modal">Save</button>
                </div>
            </div>

        </div>
        <div class="backdrop" @onclick="Close"></div>
    </div>
}

<ModalV2 @ref="_deleteModal" Title="Delete App Confirmation" Size="ModalV2.ModalSize.Small">
    <Body>
        <p>Are you sure you want to delete this app?</p>
    </Body>
    <Footer>
        <button type="button" class="dosc-button dosc-button-danger" data-dismiss="modal" @onclick="() => OnDeleteConfirmed()">Delete</button>
        <button type="button" class="dosc-button dosc-button-primary" data-dismiss="modal" @onclick="() => _deleteModal.Close()">No</button>
    </Footer>
</ModalV2>