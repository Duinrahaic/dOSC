@using Blazor.Diagrams.Components.Renderers;
@using dOSC.Components.Inputs;
@using dOSC.Engine.Nodes.Utility;
@using dOSC.Engine.Ports;
<div class="@this.Node.BlockHeaderClass" style="width: 160px;">
    <div class="block-header d-flex d-inline">
        <div class="icon"></div>
        <div class="title">Logic Switch</div>
    </div>
    <div class="block-body">
        <div class="d-flex d-inline p-1 align-items-center justify-center">
            <PortRenderer Class="logic" Port="this.Node.Ports[0]" />
            <h5>Switch</h5>
        </div>
        <div class="d-flex d-inline p-1 align-items-center justify-center">
            <PortRenderer Class="logic" Port="this.Node.Ports[1]" />
            <h5>A</h5>
        </div>
        <div class="d-flex d-inline align-items-center justify-center-end py-2">
            <PortRenderer Class="logic" Port="this.Node.Ports[3]" />
        </div>
        <div class="d-flex d-inline p-1 align-items-center justify-center">
            <PortRenderer Class="logic" Port="this.Node.Ports[2]" />
            <h5>B</h5>
        </div>
    </div>
</div>
