        <div class="title">OSC VRC Button Block</div>
    </div>
    <div class="block-body  overflow-visible">
        <div class="d-flex flex-column">
            <div class="d-flex d-inline align-items-center justify-center-end py-2 w-100">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @this.Node.SelectedOptionText
                    </button>
                    <ul class="dropdown-menu position-absolute">
                        @foreach (var option in this.Node.Options)
                        {
                            <li><a class="dropdown-item" @onclick="(()=>this.Node.SetOption(option.Key))">@option.Value</a></li>
                        }
                    </ul>
                </div>
                <PortRenderer Class="logic" Port="this.Node.Ports[0]" />

            </div>

        </div>
    </div>
</div>
