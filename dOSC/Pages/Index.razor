@using global::dOSC.Components
@page "/"
<div class="app-page">
    <div class="home-container">
        <div class="home-panel">
            <img src="_content/dOSCEngine/images/dOSC-logo.png" />
            <div class="subtitle"> A Dynamic OSC App Sharing Platform </div>
        </div>
        <div class="home-panel-options">
            <ul>
                <li>
                    <div class="option" @onclick="@OpenTwitter" style="padding: 12px;">
                        <img src="_content/dOSCEngine/images/logo-twitter-new-white.png" />
                    </div>
                </li>
                <li>
                    <div class="option" @onclick="@OpenDiscord">
                        <img src="_content/dOSCEngine/images/discord-mark.png" />
                    </div>
                </li>
                <li>
                    <div class="option" @onclick="@OpenKofi">
                        <img src="_content/dOSCEngine/images/kofi-logo-white.png" />
                    </div>
                </li>
                <li>
                    <div class="option" @onclick="@OpenPatreon">
                        <img src="_content/dOSCEngine/images/patreon-mark-white.png"  />
                    </div>
                </li>
                <li>
                    <div class="option" @onclick="@OpenGithub">
                        <img src="_content/dOSCEngine/images/github-mark-white.png" />
                    </div>
                </li><li>
                    <div class="option" @onclick="@OpenDocumentation">
                        <span class="icon icon-book-open"/>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

