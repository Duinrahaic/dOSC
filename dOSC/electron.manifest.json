{
  "descripton": "A Dynamic Application Platform",
  "executable": "dOSC",
  "splashscreen": {
    "imageFile": ""
  },
  "homepage": "https://github.com/Duinrahaic/dOSC",
  "name": "dOSC",
  "author": "Duinrahaic",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.dOSC.app",
    "productName": "dOSC",
    "copyright": "Copyright Â© 2020",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "artifactName": "${productName} Setup.${ext}"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}