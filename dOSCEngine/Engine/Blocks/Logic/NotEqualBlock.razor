@using Blazor.Diagrams.Components.Renderers;
@using dOSCEngine.Components.Inputs;
@using dOSCEngine.Engine.Helper
@using dOSCEngine.Engine.Ports;

<div class="@this.Node.BlockHeaderClass" style="width: 150px;">
    <div class="block-header d-flex d-inline">
        <div class="icon"></div>
        <div class="title">Not Equal</div>
    </div>
    <div class="block-body">
        <div class="d-flex d-inline p-1 align-items-center justify-center">
            <PortRenderer Class="@this.Node.PortAType" Port="this.Node.Ports[0]" />
            <h5>A</h5>
        </div>
        <div class="d-flex d-inline align-items-center justify-center-end py-2">
            <PortValueLabel LabelPosition=PortValueLabel.Position.Right DisplayValue="this.Node.Value" />
            <PortRenderer Class="logic" Port="this.Node.Ports[2]" />
        </div>
        <div class="d-flex d-inline p-1 align-items-center justify-center">
            <PortRenderer Class="@this.Node.PortBType" Port="this.Node.Ports[1]" />
            <h5>B</h5>
        </div>
    </div>
</div>